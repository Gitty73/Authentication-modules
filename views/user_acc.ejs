<!Doctype html>
<html>
<head>
    <title>Splitwise</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body style = "text-align: center; background-color: #F5DEB3; margin-top: 5%;">
    
    <div class="container">
        <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>
    
<h1>Welcome To Your Splitwise Account</h1>
<img style = "width: 200px; height: 200px;"src="https://mechanicwp.ir/wp-content/uploads/2018/04/user-circle.png" alt="user image">
<h3>Split it wisely...</h3>
<a href="/logout">Logout</a><br>
<a href="/">Go Home</a>
</body>
</html>